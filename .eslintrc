{
  "extends": "strongloop",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true
  },
  "rules": {
    "indent": ["error", 4],
    "curly": ["error", "all"],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreUrls": true
      }
    ],
    "no-confusing-arrow": "error",
    "no-tabs": "error",
    "quotes": ["error", "double"],
    "space-in-parens": 2,
    "space-before-function-paren": 0,
    "comma-dangle": ["error", "never"]
  }
}
